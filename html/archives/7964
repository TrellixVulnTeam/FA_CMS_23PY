        return [...new Set(this)]
    };

    function selected_db() {
        var dbs = [];
        $('.selected_db:checked').each(function () {
            dbs.push($(this).val());
        });
        dbs = dbs.uni();
        var selected = cards.filter(function (e, i, a) {
            return dbs.includes(e.dbname)
        });
        return selected
    }

